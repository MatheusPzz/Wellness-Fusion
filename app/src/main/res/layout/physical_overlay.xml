<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title for the overlay -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the categories you want to include in your workout:"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"/>

    <!-- GridLayout for the mix and match items -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Dynamically add ImageButtons or ToggleButtons here -->

        <ImageView

            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/sad_round"
            android:contentDescription="Smile Icon"
            android:scaleType="fitXY"/>


    </GridLayout>

    <!-- Button to confirm selection -->
    <Button
        android:id="@+id/buttonSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_marginTop="16dp"/>
</LinearLayout>